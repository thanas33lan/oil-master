<script type="text/javascript">
    /* Table initialisation */
    oTable = null;
    duplicateName = true;
    function validateNow() {
        flag = deforayValidator.init({
            formId: 'productInformation'
        });
        if (flag) {
            if (duplicateName) {
                $.blockUI();
                document.getElementById('productInformation').submit();
            }
        }
    }

    function checkNameValidation(tableName, fieldName, obj, fnct, msg) {
        checkValue = document.getElementById(obj.id).value;
        if ($.trim(checkValue) != '') {
            $.post("<?php echo $this->url('common', array('action' => 'index')); ?>", {
                tableName: tableName,
                fieldName: fieldName,
                value: checkValue,
                fnct: fnct
            },
            function(data) {
                if (data > 0) {
                    alert(msg,'err');
                    duplicateName = false;
                    document.getElementById(obj.id).value = "";
                } else {
                    duplicateName = true;
                }
            });
        }
    }
    $(document).ready(function() {
        $("#name").stringToSlug({
			getPut : "#slug"
        });
        
        oTable = $('#qtyTable').dataTable({
            "bAutoWidth": false,
            "bProcessing": true,
            "bServerSide": true,
            "stateSave": true,
            "aoColumns": [
                <?php echo $editAction; ?>
            ],
            "sAjaxSource": "<?php echo $this->url('admin-product', array('action' => 'index')); ?>",
            "fnServerData": function(sSource, aoData, fnCallback) {
                $.ajax({
                    "dataType": 'json',
                    "type": "POST",
                    "url": sSource,
                    "data": aoData,
                    "success": fnCallback
                });
            }
        });
    });
    
    function changeStatus(catId,catStatus){
        $.blockUI();
        $.post("<?php echo $this->url('admin-product', array('action' => 'change-status')); ?>", {id: catId, status : catStatus},
        function(data) {
            oTable.fnDraw();
            $.unblockUI();
        });
        afterCallback();
    }

    function showAddForm(obj,btn){
        if(btn == 'add-btn'){
            $(obj).hide(500);
            $('.show-form').show(500);
        }else{
            $('.show-form').hide(500);
            $('.add-btn').show(500);
        }
    }
</script>